@model QuanLiPhongKham.Models.BacSi
@{
    ViewData["Title"] = "Xóa Bác Sĩ";
}

<div class="container mt-4">
    <h2 class="text-danger">Bạn có chắc muốn xóa bác sĩ này?</h2>

    <div class="mt-3">
        <p><strong>Họ tên:</strong> @Model.HoTen</p>
        <p><strong>Chuyên khoa:</strong> @Model.ChuyenKhoa</p>
        <p><strong>Số điện thoại:</strong> @Model.SoDienThoai</p>
        <p><strong>Email:</strong> @Model.Email</p>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="BacSiId" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    </form>
</div>
