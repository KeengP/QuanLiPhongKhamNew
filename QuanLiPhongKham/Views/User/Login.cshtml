@model QuanLiPhongKham.Models.User

@{
    ViewData["Title"] = "Đăng nhập";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container d-flex justify-content-center align-items-center" style="min-height:100vh;">
    <div class="col-md-5">
        <div class="card shadow-lg border-0 rounded-4">
            <div class="card-body p-4">

                <h3 class="text-center mb-3 text-success">Đăng nhập</h3>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger text-center">@ViewBag.Error</div>
                }

                <form method="post">

                    <div class="mb-3">
                        <label class="form-label">Tên đăng nhập</label>
                        <input asp-for="Username" class="form-control form-control-lg" placeholder="Tên đăng nhập" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Mật khẩu</label>
                        <input asp-for="Password" type="password" class="form-control form-control-lg" placeholder="Mật khẩu" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <button class="btn btn-success w-100 btn-lg mt-2">Đăng nhập</button>

                    <div class="text-center mt-3">
                        <a href="/User/Register">Chưa có tài khoản? Đăng ký</a>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
