@model QuanLiPhongKham.Models.LichHen

<h2>Chi tiết lịch hẹn</h2>

<div class="card p-3">
    <p><strong>Bệnh nhân:</strong> @Model.BenhNhan?.HoTen</p>
    <p><strong>Bác sĩ:</strong> @Model.BacSi?.HoTen</p>
    <p><strong>Ngày hẹn:</strong> @Model.NgayHen?.ToString("dd/MM/yyyy HH:mm")</p>
    <p><strong>Ghi chú:</strong> @Model.GhiChu</p>
</div>

<br />

<a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.LichHenId">Sửa</a>
<a class="btn btn-secondary" asp-action="Index">Quay lại</a>
