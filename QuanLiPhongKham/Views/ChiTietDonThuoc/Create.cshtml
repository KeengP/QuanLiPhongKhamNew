@model QuanLiPhongKham.Models.ChiTietDonThuoc

<h2 class="text-center mb-4">Thêm thuốc vào đơn</h2>

<form asp-action="Create" method="post" class="w-50 mx-auto">

    <input type="hidden" asp-for="DonThuocId" value="@ViewBag.DonThuocId" />

    <div class="form-group mb-3">
        <label>Tên thuốc</label>
        <input class="form-control" asp-for="TenThuoc" />
    </div>

    <div class="form-group mb-3">
        <label>Liều lượng</label>
        <input class="form-control" asp-for="LieuLuong" />
    </div>

    <div class="form-group mb-3">
        <label>Số lượng</label>
        <input class="form-control" asp-for="SoLuong" type="number" />
    </div>

    <button class="btn btn-success">Thêm</button>
    <a class="btn btn-secondary" href="/DonThuoc/Details/@ViewBag.DonThuocId">Quay lại</a>
</form>
