@model QuanLiPhongKham.Models.DonThuoc

<h2 class="text-center mb-4">Tạo đơn thuốc</h2>

<form asp-action="Create" method="post" class="w-50 mx-auto">

    <div class="form-group mb-3">
        <label>Chọn lịch hẹn</label>
        <select class="form-control" asp-for="LichHenId">
            @foreach (var lh in ViewBag.LichHen)
            {
                <option value="@lh.LichHenId">
                    @lh.LichHenId - @lh.BenhNhan.HoTen (BS: @lh.BacSi.HoTen)
                </option>
            }
        </select>
    </div>

    <div class="form-group mb-3">
        <label>Ghi chú</label>
        <textarea class="form-control" asp-for="GhiChu"></textarea>
    </div>

    <button class="btn btn-success">Lưu</button>
    <a class="btn btn-secondary" asp-action="Index">Quay lại</a>
</form>
