@model QuanLiPhongKham.Models.DonThuoc

<h2 class="text-center text-danger mb-4">Xóa đơn thuốc</h2>

<div class="alert alert-danger w-50 mx-auto text-center">
    Bạn có chắc muốn xóa đơn thuốc này?
</div>

<ul class="w-50 mx-auto">
    <li><strong>Đơn thuốc:</strong> @Model.DonThuocId</li>
    <li><strong>Bệnh nhân:</strong> @Model.LichHen?.BenhNhan?.HoTen</li>
    <li><strong>Bác sĩ:</strong> @Model.LichHen?.BacSi?.HoTen</li>
</ul>

<form asp-action="Delete" method="post" class="text-center">
    <input type="hidden" asp-for="DonThuocId" />
    <button class="btn btn-danger">Xóa</button>
    <a class="btn btn-secondary" asp-action="Index">Hủy</a>
</form>
