@model QuanLiPhongKham.Models.BenhNhan

@{
    ViewData["Title"] = "Xóa bệnh nhân";
}

<h2 class="text-danger mt-4">Bạn có chắc muốn xóa bệnh nhân này?</h2>

<ul class="mt-3">
    <li><strong>Họ tên:</strong> @Model.HoTen</li>
    <li><strong>Ngày sinh:</strong> @Model.NgaySinh?.ToString("dd/MM/yyyy")</li>
    <li><strong>Giới tính:</strong> @Model.GioiTinh</li>
    <li><strong>Địa chỉ:</strong> @Model.DiaChi</li>
    <li><strong>Số điện thoại:</strong> @Model.SoDienThoai</li>
    <li><strong>Email:</strong> @Model.Email</li>
</ul>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="BenhNhanId" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
